
<div class="movie-container">
    <%= link_to movie_path(movie), class: 'movie-link' do%>
      <div id="<%= dom_id movie %>" class="movie-card">
        <p class="movie-info">
          <strong>Title:</strong>
          <%= movie.title %>
        </p>

        <p class="movie-info">
          <strong>Duration:</strong>
          <%= movie.duration %>
        </p>

        <p class="movie-info">
          <strong>Description:</strong>
          <%= movie.description %>
        </p>

        <p class="movie-info">
          <strong>Genre:</strong>
          <%= movie.genre %>
        </p>

        <p class="movie-info">
          <strong>Ratings:</strong>
          <%= movie.ratings %>
        </p>

        <p class="movie-info">
          <strong>Director:</strong>
          <%= movie.director %>
        </p>
      </div>
    <% end %>

</div>


